{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "crawl:news-topics": {
      "outputs": ["output/**"]
    },
    "crawl:news-list": {
      "outputs": ["output/**"]
    },
    "crawl:news-details": {
      "outputs": ["output/**"]
    },
    "generate:news": {
      "outputs": ["output/**"],
      "env": ["GOOGLE_GENAI_API_KEY"]
    },
    "generate:newscast-script": {
      "outputs": ["output/**"]
    },
    "generate:newscast-audio": {
      "outputs": ["output/**"]
    },
    "generate:newscast": {
      "outputs": ["output/**"]
    }
  }
}