{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["PATH", "VIRTUAL_ENV"],
  "tasks": {
    "crawl:news-topics": {
      "outputs": ["output/**"],
      "env": ["PATH", "VIRTUAL_ENV"]
    },
    "crawl:news-list": {
      "outputs": ["output/**"],
      "env": ["PATH", "VIRTUAL_ENV"]
    },
    "crawl:news-details": {
      "outputs": ["output/**"],
      "env": ["PATH", "VIRTUAL_ENV"]
    },
    "generate:news": {
      "outputs": ["output/**"],
      "env": ["GOOGLE_GEN_AI_API_KEY", "PATH", "VIRTUAL_ENV"]
    },
    "generate:newscast-script": {
      "outputs": ["output/**"],
      "env": ["GOOGLE_GEN_AI_API_KEY"]
    },
    "generate:newscast-audio": {
      "outputs": ["output/**"],
      "env": ["GOOGLE_CLOUD_API_KEY"]
    },
    "generate:newscast": {
      "outputs": ["output/**"]
    }
  }
}