{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["PATH", "VIRTUAL_ENV", "GOOGLE_GEN_AI_API_KEY", "GOOGLE_CLOUD_API_KEY"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:workers": {
      "dependsOn": [
        "@ai-newscast/news-crawler-worker#build",
        "@ai-newscast/news-generator-worker#build",
        "@ai-newscast/newscast-generator-worker#build",
        "@ai-newscast/newscast-scheduler-worker#build",
        "@ai-newscast/newscast-latest-id#build"
      ],
      "outputs": []
    },
    "build:lambdas": {
      "dependsOn": ["@ai-newscast/newscast-generator-lambda#build"],
      "outputs": []
    },
    "build:web": {
      "dependsOn": ["@ai-newscast/newscast-web#build"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "crawl:topics": {
      "outputs": ["output/**"],
      "env": ["PATH", "VIRTUAL_ENV"]
    },
    "crawl:detail": {
      "outputs": ["output/**"],
      "env": ["PATH", "VIRTUAL_ENV"]
    },
    "crawl:details": {
      "outputs": ["output/**"],
      "env": ["PATH", "VIRTUAL_ENV"]
    },
    "generate:news": {
      "outputs": ["output/**"],
      "env": ["GOOGLE_GEN_AI_API_KEY", "PATH", "VIRTUAL_ENV"]
    },
    "generate:script": {
      "outputs": ["output/**"],
      "env": ["GOOGLE_GEN_AI_API_KEY"]
    },
    "generate:audio": {
      "outputs": ["output/**"],
      "env": ["GOOGLE_CLOUD_API_KEY"]
    },
    "generate:newscast": {
      "outputs": ["output/**"]
    },
    "upload:r2": {
      "outputs": [],
      "env": ["CLOUDFLARE_ACCOUNT_ID", "CLOUDFLARE_ACCESS_KEY_ID", "CLOUDFLARE_SECRET_ACCESS_KEY"]
    },
    "update:local": {
      "cache": false
    },
    "update:remote": {
      "cache": false
    },
    "get:local": {
      "cache": false
    },
    "get:remote": {
      "cache": false
    }
  }
}
