{
  "name": "ai-newscast",
  "version": "2.2.0",
  "description": "AI-powered news cast generation system",
  "private": true,
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.12.2",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "turbo clean",
    
    "crawl": "turbo crawl --filter=@ai-newscast/news-crawler-py",
    "crawl:topics": "turbo crawl:topics --filter=@ai-newscast/news-crawler-py",
    "crawl:news": "turbo crawl:news --filter=@ai-newscast/news-crawler-py",
    "crawl:details": "turbo crawl:details --filter=@ai-newscast/news-crawler-py",
    "crawl:pipeline": "turbo crawl:pipeline --filter=@ai-newscast/news-crawler-py",
    
    "news:process": "turbo process --filter=@ai-newscast/news-processor",
    "script:generate": "turbo generate-script --filter=@ai-newscast/script-generator",
    "audio:generate": "turbo generate-audio --filter=@ai-newscast/audio-generator",
    "audio:merge": "turbo merge --filter=@ai-newscast/audio-processor",
    
    "api:deploy": "turbo deploy --filter=@ai-newscast/api-server",
    "api:dev": "turbo dev --filter=@ai-newscast/api-server",
    "api:test": "curl https://ai-newscast-latest-id.r-s-account.workers.dev/latest",
    
    "env:check": "node -e \"console.log('GOOGLE_AI_API_KEY:', process.env.GOOGLE_AI_API_KEY ? 'SET' : 'NOT SET')\"",
    "env:setup": "node scripts/setup-env.js",
    "env:load": "export $(cat .env | grep -v '^#' | xargs) && echo 'Environment loaded from .env'",
    
    "pipeline:full": "./run-complete-pipeline.sh",
    "pipeline:fast": "./run-complete-pipeline.sh -t 3 -s",
    "pipeline:test": "./run-complete-pipeline.sh -t 1",
    "pipeline:audio": "./run-complete-pipeline.sh -t 1 -v",
    
    "demo:quick": "echo 'Quick demo using latest data...' && pnpm news:process -- output/$(ls output/ | tail -1)/topic-01",
    "demo:audio": "echo 'Audio generation demo...' && pnpm audio:generate -- ./demo-script.json ./demo-output --verbose",
    
    "workflow:crawl": "pnpm crawl:topics && pnpm crawl:news -- output/$(ls output/ | tail -1) --topics 1,2,3",
    "workflow:process": "pnpm crawl:details -- output/$(ls output/ | tail -1) --topics 1,2,3 && pnpm news:process -- output/$(ls output/ | tail -1)/topic-01",
    "workflow:generate": "pnpm script:generate -- output/$(ls output/ | tail -1)/topic-01",
    "workflow:audio": "pnpm audio:generate -- output/$(ls output/ | tail -1)/topic-01 && pnpm audio:merge -- output/$(ls output/ | tail -1)/topic-01"
  },
  "keywords": ["ai", "news", "cast", "tts", "automation"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.0.3",
    "eslint": "^9.29.0",
    "prettier": "^3.6.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  }
}
