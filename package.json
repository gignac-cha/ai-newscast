{
  "name": "ai-newscast",
  "version": "3.1.0",
  "description": "AI-powered news cast generation system",
  "private": true,
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "build": "turbo build",
    "build:workers": "turbo build:workers",
    "typecheck": "turbo typecheck",
    "run:crawler:news-topics": "turbo crawl:topics",
    "run:crawler:news-details": "turbo crawl:details",
    "run:generator:news": "turbo generate:news",
    "run:generator:newscast-script": "turbo generate:script",
    "run:generator:newscast-audio": "turbo generate:audio",
    "run:generator:newscast": "turbo generate:newscast",
    "update:latest-id:local": "pnpm --filter @ai-newscast/newscast-latest-id update:local --",
    "update:latest-id:remote": "pnpm --filter @ai-newscast/newscast-latest-id update:remote --",
    "get:latest-id:local": "pnpm --filter @ai-newscast/newscast-latest-id get:local",
    "get:latest-id:remote": "pnpm --filter @ai-newscast/newscast-latest-id get:remote"
  },
  "keywords": [
    "ai",
    "news",
    "cast",
    "tts",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.7.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "wrangler": "^4.42.2"
  }
}
