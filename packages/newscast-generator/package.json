{
  "name": "@ai-newscast/newscast-generator",
  "version": "1.0.0",
  "description": "AI-powered newscast script and audio generator with Google TTS integration",
  "type": "module",
  "main": "newscast-generator.js",
  "scripts": {
    "generate": "node --experimental-strip-types newscast-generator.ts",
    "generate:newscast-script": "node --experimental-strip-types newscast-generator.ts script",
    "generate:newscast-audio": "node --experimental-strip-types newscast-generator.ts audio",
    "generate:newscast": "node --experimental-strip-types newscast-generator.ts newscast",
    "dev": "node --experimental-strip-types --watch newscast-generator.ts",
    "test": "node --experimental-strip-types --test **/*.test.ts"
  },
  "dependencies": {
    "@ai-newscast/core": "workspace:*",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@google-cloud/text-to-speech": "^6.3.0",
    "@google/genai": "^1.20.0",
    "commander": "^14.0.1",
    "dotenv": "^17.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "wrangler": "^4.38.0"
  },
  "keywords": [
    "ai",
    "newscast",
    "script",
    "tts",
    "google-cloud",
    "audio-generation"
  ],
  "authors": [
    "AI Newscast Team"
  ],
  "license": "MIT"
}