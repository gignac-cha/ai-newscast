{
  "name": "@ai-newscast/newscast-web",
  "version": "1.0.0",
  "description": "AI Newscast web player built with React and Vite for Cloudflare Pages",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:kv": "scripts/load-kv-config.sh pnpm build",
    "build:watch": "vite build --mode watch",
    "build:analyze": "vite build --mode analyze",
    "build:debug": "DEBUG=vite:* vite build",
    "build:profile": "vite build --profile",
    "build:perf": "node build-perf.ts",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-newscast/core": "workspace:*",
    "@emotion/react": "^11.14.0",
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "@fortawesome/react-fontawesome": "^3.0.2",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/themes": "^3.2.1",
    "@tanstack/react-query": "^5.89.0",
    "dayjs": "^1.11.18",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "sass": "^1.92.1"
  },
  "devDependencies": {
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.6",
    "wrangler": "^4.38.0"
  },
  "keywords": [
    "ai",
    "newscast",
    "react",
    "vite",
    "cloudflare-pages",
    "audio-player"
  ],
  "authors": [
    "AI Newscast Team"
  ],
  "license": "MIT"
}