{
  "name": "@ai-newscast/api-server",
  "version": "2.1.1",
  "description": "Cloudflare Workers API for AI Newscast latest batch ID management",
  "main": "src/worker.ts",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.12.2",
  "scripts": {
    "build": "echo 'API server build completed'",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "typecheck": "tsc --noEmit",
    "kv:create": "wrangler kv:namespace create ai-newscast-kv",
    "kv:list": "wrangler kv:key list --binding=AI_NEWSCAST_KV",
    "kv:get": "wrangler kv:key get --binding=AI_NEWSCAST_KV",
    "kv:put": "wrangler kv:key put --binding=AI_NEWSCAST_KV",
    "test": "echo 'No tests configured for API server'"
  },
  "dependencies": {
    "@ai-newscast/core": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250620.0",
    "@types/node": "^24.0.3",
    "typescript": "^5.8.3",
    "wrangler": "^4.20.5"
  },
  "keywords": [
    "cloudflare-workers",
    "api",
    "kv",
    "ai-newscast"
  ]
}