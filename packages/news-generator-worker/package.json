{
  "name": "@ai-newscast/news-generator-worker",
  "version": "1.0.0",
  "type": "module",
  "description": "Cloudflare Worker for AI-powered news generation",
  "main": "dist/worker.js",
  "types": "dist/worker.d.ts",
  "scripts": {
    "build": "node build.ts",
    "dev": "node build.ts --watch",
    "typecheck": "tsc --noEmit",
    "deploy": "pnpm build && wrangler deploy",
    "dev:worker": "pnpm build && wrangler dev"
  },
  "keywords": [
    "cloudflare",
    "worker",
    "news",
    "generator",
    "ai",
    "gemini"
  ],
  "author": "AI Newscast",
  "license": "MIT",
  "dependencies": {
    "@ai-newscast/core": "workspace:*",
    "@google/genai": "^1.20.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250918.0",
    "@types/node": "^24.5.2",
    "esbuild": "^0.25.10",
    "typescript": "^5.9.2",
    "wrangler": "^4.38.0"
  },
  "files": [
    "dist",
    "worker.ts",
    "build.ts",
    "wrangler.toml"
  ],
  "exports": {
    ".": {
      "types": "./dist/worker.d.ts",
      "default": "./dist/worker.js"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}