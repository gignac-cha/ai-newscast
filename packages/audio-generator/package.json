{
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.12.2",
  "name": "@ai-newscast/audio-generator",
  "version": "2.1.1",
  "type": "module",
  "description": "Text-to-speech audio generation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild src/index.ts src/cli.ts --outdir=dist --bundle --platform=node --format=esm --target=node18 --external:@google-cloud/text-to-speech --external:@ai-newscast/core && esbuild src/cli.ts --outfile=dist/cli.js --bundle --platform=node --format=esm --target=node18 --external:@google-cloud/text-to-speech --external:@ai-newscast/core",
    "dev": "npm run build -- --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "generate-audio": "node dist/cli.js"
  },
  "dependencies": {
    "@ai-newscast/core": "workspace:*",
    "@google-cloud/text-to-speech": "^6.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "typescript": "^5.8.3",
    "esbuild": "^0.25.5"
  }
}