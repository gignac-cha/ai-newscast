{
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.12.2",
  "name": "@ai-newscast/script-generator",
  "version": "2.1.1",
  "description": "AI-powered newscast script generation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "pnpm run clean && esbuild src/index.ts --bundle --platform=node --target=esnext --format=esm --outfile=dist/index.js --sourcemap --external:@ai-newscast/core --external:@google/generative-ai --external:dotenv && pnpm run build:cli && pnpm run copy:prompts",
    "build:cli": "esbuild src/cli.ts --bundle --platform=node --target=esnext --format=esm --outfile=dist/cli.js --sourcemap --external:@ai-newscast/core --external:@google/generative-ai --external:dotenv --banner:js=\"#!/usr/bin/env node\"",
    "copy:prompts": "cp -r src/prompts dist/",
    "dev": "esbuild src/index.ts --bundle --platform=node --target=esnext --format=esm --outfile=dist/index.js --sourcemap --watch --external:@ai-newscast/core --external:@google/generative-ai --external:dotenv",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "generate-script": "node dist/cli.js"
  },
  "dependencies": {
    "@ai-newscast/core": "workspace:*",
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "esbuild": "^0.25.5",
    "typescript": "^5.8.3"
  }
}